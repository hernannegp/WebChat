<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/socket.io/socket.io.js"></script>
  <link rel="stylesheet" href="style.css">
  <title>Webchat</title>
</head>
<body>
  <h1>Projeto WebChat</h1>
 <div class="chat">
   <form class="nickForm">
    <input data-testid="nickname-box" id="username" type="text" autocomplete="off" name="nickname" placeholder="Digite seu usuario">
    <button type="submit" class="nickButton" data-testid="nickname-button">Salvar</button>
   </form>
    <div class="messagesContainer">
      <ul id="listMessages">
      </ul>
    </div>
    <form>
      <input type="text" id="messageInput" data-testid="message-box" name="message-box" placeholder="Digite sua mensagem aqui"/>
      <button type="submit" class="buttonMessage" data-testid="send-button" name="send-button">Enviar</button>
    </form>
    <div class="usersContainer">
      <h2>Usuarios conectados</h2>
      <ul id="users"></ul>
    </div>
  </div>
  <script src="script.js"></script>
</body>
</html>